{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src/**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules"]
}
